<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/a"
    android:layout_height="match_parent"
    tools:context="com.ssuet.yousufminhaj.ecg.register">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                 REGISTER"
        android:id="@+id/textView3"
        android:layout_marginTop="174dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#090000"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:gravity="center|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First_name :  "
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:inputType="text"
        android:layout_toEndOf="@+id/textView4"
        android:hint="Enter Your First Name"
        android:textColor="#0c0b0b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last_name :  "
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_above="@+id/editText4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:hint="Enter Your Last Name"
        android:inputType="text"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :    "
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:hint="Enter Your Email"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:hint="Enter Your Password"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/register"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignEnd="@+id/editText6"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/logo"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toStartOf="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB BASED SMART ECG"
        android:id="@+id/textView8"
        android:textColor="#d50c0c"
        android:textSize="20sp"
        android:layout_below="@+id/imageView3"
        android:layout_toStartOf="@+id/editText4"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Virtual Solution for your ECG"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_above="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB BASED SMART ECG"
        android:id="@+id/textView10"
        android:textColor="#d50c0c"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginTop="92dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Virtual Solution for your ECG"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView8" />
</RelativeLayout>
