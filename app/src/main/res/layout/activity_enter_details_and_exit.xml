<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@drawable/a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.ssuet.yousufminhaj.ecg.enter_details_and_exit">

    <Button
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Enter_Details"
        android:id="@+id/enterdetails"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exit"
        android:layout_below="@+id/enterdetails"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/logo"
        android:textAlignment="viewStart"
        android:layout_above="@+id/enterdetails"
        android:layout_toStartOf="@+id/textView18"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Virtual Solution for your ECG"
        android:id="@+id/textView17"
        android:layout_above="@+id/enterdetails"
        android:layout_alignEnd="@+id/enterdetails"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB BASED SMART ECG"
        android:id="@+id/textView18"
        android:textColor="#d50c0c"
        android:textSize="20sp"
        android:layout_above="@+id/textView17"
        android:layout_alignEnd="@+id/textView17"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
</RelativeLayout>
